<div class="post-header main-content-wrap <%= (post.metaAlignment ? 'text-' + post.metaAlignment : 'text-left') %>">
    <% if (post.link) { %>
        <h1 itemprop="headline">
            <a class="link" href="<%- url_for(post.link) %>" target="_blank" rel="noopener" itemprop="url">
                <%= post.title || '(' + __('post.no_title') + ')' %>
            </a>
        </h1>
    <% } else { %>
        <h1 class="post-title" itemprop="headline">
            <%= post.title || '(' + __('post.no_title') + ')' %>
        </h1>
    <% } %>
    <% if (post.meta === undefined || post.meta) { %>
        <%- partial('meta',{classes: ['post-meta']}) %>
    <% } %>
    <span id="busuanzi_container_page_pv" style="font-size: 1.2rem; color: #9eabb3;">
        <a href="javascript:void(0);" title="阅读总量"><i class="fa fa-lg fa-eye"></i>  <span id="busuanzi_value_page_pv" style="font-size: 1.5rem"></span></a>
    </span>
</div>
